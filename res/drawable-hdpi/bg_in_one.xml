<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
<!--  颜色渐变效果   -->
    <gradient 
    	android:startColor="@color/color_yellow" 
    	android:endColor="@color/color_yellow"
        android:paddingTop="5dp" 
        android:angle="0" />

<!--  按钮四个角的平滑度   -->        
    <corners android:radius="2dp" />
    
<!--  焦点在按钮上时光环的宽度与颜色   -->     
    <stroke android:width="2dp" android:color="@color/color_white" />
              
    <padding 
    	android:left="3dp" 
    	android:top="3dp" 
        android:right="3dp" 
        android:bottom="3dp" />
</shape>
