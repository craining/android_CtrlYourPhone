<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  <View 
  	android:layout_width="fill_parent"
  	android:layout_height="1dip"
  	android:background="@color/color_white"/>

    <ScrollView    
        xmlns:android="http://schemas.android.com/apk/res/android" 
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"> 
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  		  android:layout_width="fill_parent"
  		  android:layout_height="wrap_content"
  		  android:orientation="vertical">  	
  		  
   <EditText
  	android:id="@+id/edittext_sendsecretmsgto"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:hint="在此输入接收者的号码"
  	android:layout_marginTop="15dip"
  	android:layout_marginLeft="30dip"
  	android:layout_marginRight="30dip"
  	android:numeric="integer"/> 	  		  
  <EditText
  	android:id="@+id/edittext_sendsecretmsgcontent"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:hint="@string/msg_sendsecretmsg_inputcontent"
  	android:layout_marginTop="15dip"
  	android:layout_marginLeft="30dip"
  	android:layout_marginRight="30dip"/>
  <EditText
  	android:id="@+id/edittext_sendsecretmsgpwd"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:hint="@string/msg_sendsecretmsg_inputreadpwd"
  	android:layout_marginTop="15dip"
  	android:layout_marginLeft="30dip"
  	android:layout_marginBottom="20dip"
  	android:layout_marginRight="30dip"
  	android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIGJKLMNOPQRSTUVWXYZ1234567890"/>
  <View 
  	android:layout_width="fill_parent"
  	android:layout_height="1dip"
  	android:layout_marginBottom="5dip"
  	android:background="@color/color_yellow"/>
  	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
  		android:stretchColumns="0,1">
  		<TableRow>
  		  <Button
  			android:id="@+id/button_sendsecretmsgSure"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:text="@string/ctrl_send"
  			android:layout_marginLeft="5dip"
  			android:layout_column="0" />
  		  <Button
  			android:id="@+id/button_sendsecretmsgCancle"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_marginRight="5dip"
  			android:text="@string/ctrl_cancle"
  			android:layout_column="1" />  
  		</TableRow>
  		</TableLayout>
  		  	</LinearLayout>
</ScrollView>
</LinearLayout>
